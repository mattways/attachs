<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <ul>
    <li>
      <ul>        
        <% @comment.files.each_with_index do |file, index| %>
          <li>
            <%= link_to 'file', file.path %>
            <%= f.fields_for :files, :index => index do |ff| %>
              <%= ff.check_box :_destroy %>
              <%= ff.file_field :file %>               
            <% end %>
          </li>
        <% end %>        
        <li>
          <%= f.fields_for :files, :index => 'new' do |ff| %>
            <%= ff.file_field :file %>          
          <% end %>
        </li>
      </ul>                                                                
    </li>   
    <li>
      <%= f.text_area :body %>
    </li>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
